

<h4 class="ui center aligned  medium icon header">
<div class="blue icon">
    <i class="circular fa-regular fa-comments-question-check fa-lg" style="color: #d95c26;"></i>
</div>
<i class="fa-solid fa-messages" style="color: #d95c26;"></i>
 Chatting Application!
</h4>

<div class="ui two column grid">

 <div class="twelve wide column">

        <div class="ui fluid raised card chatbox">
          <div class="content" id="messages">
            <div class="ui  feed" id="message-container">
          <%= render @messages%>
          
    </div>
</div>
        <div class="extra content">

            <%= form_for(@message, html: {class: "ui replay form", role: "form"}, url: message_path, remote: true) do |f| %>
             <form class="ui reply form">
                <div class="field">
                    <div class="ui fluid icon input">
                        <%= f.text_field :body %>
                   
                    <%= f.button ' <i class="bordered inverted blue send icon" style="background-color: #d95c26 !important;"></i>'.html_safe , class: "bn-on"%>
                    </div>       
                </div>
                <% end %>
            </form>
                
        </div>
</div>

 </div>

 <div class="four wide column">
    <div class="ui fluid raised card chatbox" style="width:100% !important;height:auto !important;">
     <div class="content" style="padding:0;width:100%;">
       <div class="ui inverted vertical pointing menu" style="background-color: #d95c26 !important;width: auto !important;">
        <a class="active item">
            Home
        </a>
        <a class="item">
            Messages
        </a>
        <a class="item">
            Friends
        </a>
    </div>
    </div>
    </div>
 </div>
</div>